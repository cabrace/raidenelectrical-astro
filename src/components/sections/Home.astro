    <section id="home" class="s-home target-section" data-parallax="scroll" data-image-src="images/header-bg-6.jpg" data-natural-width=3000 data-natural-height=2000 data-position-y=center>

        <div class="overlay"></div>
        <div class="shadow-overlay"></div>

        <div class="home-content">

            <div class="row home-content__main">

                <!-- <h3>Welcome to Glint</h3> -->

                <div class="logo-wrap">
                    <img class="logo" src="images/logo_raiden.png" alt="Raiden Logo" >
                </div>
                <h1 class="text-left" style="font-size:4.6rem;">Electrical Contractors Ltd. <br></h1>

                <!-- <h1> -->
                    <!-- We are a creative group <br> -->
                    <!-- of people who design <br> -->
                    <!-- influential brands and <br> -->
                    <!-- digital experiences. -->
                <!-- </h1> -->

                <div class="home-content__buttons">
                    <a href="#contact" class="smoothscroll btn btn--stroke">
                        Start a Project
                    </a>
                    <a href="#services" class="smoothscroll btn btn--stroke">
                        More About Us
                    </a>
                </div>

            </div>

            <div class="home-content__scroll">
                <a href="#about" class="scroll-link smoothscroll">
                    <span>Scroll Down</span>
