        <!-- end home-social -->

    </section> <!-- end s-home -->
    
<style>
    .home-content__buttons {
        padding-top: 3rem;
        text-align: left;
    }

    .home-content__line {
        background-color: #1e9cf1;
    }

    .home-content__scroll a::before {
        border-bottom: 2px solid #1e9cf1;
        border-right: 2px solid #1e9cf1;
        content: '';
        display: block;
        height: 8px;
        width: 8px;
        margin-top: -6px;
        pointer-events: none;
        position: absolute;
        left: 0;
        top: 50%;
        -webkit-transform-origin: 66% 66%;
        -ms-transform-origin: 66% 66%;
        transform-origin: 66% 66%;
        -webkit-transform: rotate(45deg);
        -ms-transform: rotate(45deg);
        transform: rotate(45deg);
        -webkit-transition: all 0.15s ease-in-out;
        transition: all 0.15s ease-in-out;
    }

    .home-social span {
        color: var(--color-brand);
    }

    .logo{
        width:33.33%;
    }

    @media only screen and (max-width: 500px){
        .logo-wrap {
            text-align: left;
        }

        .home-social {
            display: flex;
            position: absolute;
            top: 54px;
            left: 50px;
            width:25%;
            z-index: 600;
        }

        .home-social i {
            font-size: 20px;
            border: none;
        }

    }
    @media only screen and (max-width: 400px){
        .home-social {
            display: flex;
            position: absolute;
            top: 54px;
            left: 15px;
            width:25%;
            z-index: 600;
        }
        .home-social i {
            font-size: 20px;
            border: none;
        }
    }

